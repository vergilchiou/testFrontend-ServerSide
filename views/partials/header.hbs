<div class="header bg-white w-100 border-bottom sticky-top">
  <div class="d-flex p-2 justify-content-between align-items-center">
    <a href="#" class="d-inline-block py-2 px-3 border-end" id="toggle-btn">
      <i class="bi bi-arrows-angle-expand"></i>
    </a>

    <div class="d-flex align-items-center">
      <!-- 通知區塊 -->
      <div class="notification d-flex me-3">
        <div class="d-flex border rounded-pill bg-warning me-2 p-1 note-pill">
          <span><i class="bi bi-currency-dollar"></i></span>
          <span>待發貨訂單：</span>
          <span class="badge rounded-pill bg-light text-dark">42</span>
        </div>
        <div class="d-flex border rounded-pill bg-danger me-2 p-1 note-pill">
          <span><i class="bi bi-currency-dollar"></i></span>
          <span>待處理退貨：</span>
          <span class="badge rounded-pill bg-light text-dark">18</span>
        </div>
        <div class="d-flex border rounded-pill bg-info bg-gradient me-2 p-1 note-pill">
          <span><i class="bi bi-currency-dollar"></i></span>
          <span>最近通知：</span>
          <span class="badge rounded-pill bg-light text-dark">5</span>
        </div>
      </div>

      <!-- 管理者選單 -->
      <div class="dropdown">
        <button class="btn btn-white border-light dropdown-toggle rounded-pill" type="button" id="adminDropdown"
          data-bs-toggle="dropdown" aria-expanded="false">
          管理
        </button>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
          <li class="px-3 py-2">
            <div class="fw-bold">管理者</div>
            <hr class="my-1">
            <div id="adminName"></div>
            <!-- <div>姓名：{{admin.name}}</div> -->
            <div id="adminEmail"></div>
            <!-- <div>信箱：{{admin.email}}</div> -->
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>
          <li><a class="dropdown-item text-danger" href="#" onclick="logout()">登出</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
  function logout() {
    localStorage.removeItem("adminToken");
    localStorage.removeItem("adminInfo");
    window.location.href = "/admin/login";
  }
</script>