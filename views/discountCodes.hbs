<!-- 主要內容 -->
<div class=" mt-5">
  <h4 class="fw-bold mb-4">折扣碼管理</h4>
  <div class="card px-2">
    <div
      class="card-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3 bg-transparent">

      <div class="d-flex gap-2 w-100 w-md-auto mx-2">
        <div class="input-group flex-grow-1">
          <span class="input-group-text border-0 bg-transparent"><i class="bi bi-search"></i></span>
          <input type="text" class="form-control" placeholder="搜尋折扣碼..." aria-label="搜尋折扣碼" />
        </div>
        <button class="btn btn-dark">
          <span class="text-nowrap">+ 添加折扣碼</span>
        </button>
      </div>
    </div>


    <!-- 篩選區 -->
    <div class="d-flex flex-wrap gap-2 mb-4 mx-2">
      <!-- 狀態 -->
      <div class="dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="filterStatus"
          data-bs-toggle="dropdown" aria-expanded="false">
          所有狀態
        </button>
        <ul class="dropdown-menu" aria-labelledby="filterStatus">
          <li><a class="dropdown-item" href="#">啟用</a></li>
          <li><a class="dropdown-item" href="#">停用</a></li>
        </ul>
      </div>
      <!-- 到期日 排序 -->
      <div class="dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortExpiry"
          data-bs-toggle="dropdown" aria-expanded="false">
          到期日（最晚優先）
        </button>
        <ul class="dropdown-menu" aria-labelledby="sortExpiry">
          <li><a class="dropdown-item" href="#">最早優先</a></li>
          <li><a class="dropdown-item" href="#">最晚優先</a></li>
        </ul>
      </div>
    </div>

    <!-- 資料表 -->
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover align-middle text-center">
          <thead class="table-light">
            <tr>
              <th scope="col"><input type="checkbox"></th>
              <th scope="col">ID</th>
              <th scope="col">折扣碼</th>
              <th scope="col">折扣</th>
              <th scope="col">開始日期</th>
              <th scope="col">結束日期</th>
              <th scope="col">狀態</th>
              <th scope="col">操作</th>
            </tr>
          </thead>
          <tbody>
            <!-- 範例列：啟用狀態 -->
            <tr>
              <td><input type="checkbox"></td>
              <td>2</td>
              <td>WELCOME10</td>
              <td>10%</td>
              <td>2023-01-01</td>
              <td>2023-12-31</td>
              <td>
                <div class="form-check form-switch d-inline-block">
                  <input class="form-check-input" type="checkbox" id="toggle2" checked>
                  <label class="form-check-label" for="toggle2">啟用</label>
                </div>
              </td>
              <td>
                <div class="dropdown">
                  <button class="btn btn-link text-dark p-0" type="button" id="actionDropdown1"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-three-dots fs-6"></i>
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="actionDropdown1">
                    <li>
                      <a class="dropdown-item" href="userManagement.html?editId=1">
                        編輯
                      </a>
                    </li>
                    <li>
                      <hr class="dropdown-divider">
                    </li>
                    <li>
                      <a class="dropdown-item text-danger" href="#"
                        onclick="if(confirm('確定要刪除嗎？')) location.href='userManagement.html?deleteId=1';">
                        刪除
                      </a>
                    </li>
                  </ul>
                </div>
              </td>
            </tr>
            <!-- 其他列… -->
            <tr>
              <td><input type="checkbox"></td>
              <td>7</td>
              <td>BIRTHDAY20</td>
              <td>20%</td>
              <td>2023-01-01</td>
              <td>2023-12-31</td>
              <td>
                <div class="form-check form-switch d-inline-block">
                  <input class="form-check-input" type="checkbox" id="toggle7" checked>
                  <label class="form-check-label" for="toggle7">啟用</label>
                </div>
              </td>
              <td>
                <!-- 同上操作按鈕 -->
              </td>
            </tr>
            <tr>
              <td><input type="checkbox"></td>
              <td>8</td>
              <td>MEMBER15</td>
              <td>15%</td>
              <td>2023-01-01</td>
              <td>2023-12-31</td>
              <td>
                <div class="form-check form-switch d-inline-block">
                  <input class="form-check-input" type="checkbox" id="toggle8" checked>
                  <label class="form-check-label" for="toggle8">啟用</label>
                </div>
              </td>
              <td>
                <!-- 同上操作按鈕 -->
              </td>
            </tr>
            <!-- 範例列：停用狀態 -->
            <tr>
              <td><input type="checkbox"></td>
              <td>9</td>
              <td>HOLIDAY10</td>
              <td>10%</td>
              <td>2023-12-01</td>
              <td>2023-12-31</td>
              <td>
                <div class="form-check form-switch d-inline-block">
                  <input class="form-check-input" type="checkbox" id="toggle9">
                  <label class="form-check-label" for="toggle9">停用</label>
                </div>
              </td>
              <td>
                <!-- 同上操作按鈕 -->
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

