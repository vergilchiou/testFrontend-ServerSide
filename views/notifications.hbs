<!-- 主要內容 -->
<div class="container py-4">
  <h4 class="fw-bold mb-4">用戶通知管理</h4>

  <div class="d-flex mb-3">
    <div class="flex-grow-1">
      <input type="search" class="form-control" placeholder="搜尋通知...">
    </div>
    <select class="form-select w-auto ms-2">
      <option selected>所有狀態</option>
    </select>
    <select class="form-select w-auto ms-2">
      <option selected>所有接收者</option>
    </select>
    <button class="btn btn-dark ms-2">
      <i class="bi bi-plus-circle me-1"></i> 添加通知
    </button>
  </div>

  <table class="table align-middle">
    <thead>
      <tr>
        <th scope="col"><input type="checkbox"></th>
        <th scope="col">標題</th>
        <th scope="col">內容</th>
        <th scope="col">發送給</th>
        <th scope="col">發送日期</th>
        <th scope="col">狀態</th>
        <th scope="col">操作</th>
      </tr>
    </thead>
    <tbody>
      {{#each notifications}}
      <tr>
        <td><input type="checkbox"></td>
        <td>{{this.title}}</td>
        <td>{{this.content}}</td>
        <td>{{this.recipient}}</td>
        <td>{{this.date}}</td>
        <td>
          <span class="badge bg-{{this.badgeClass}}">{{this.status}}</span>
        </td>
        <td>
          <div class="dropdown">
            <button class="btn p-0 border-0 bg-transparent" type="button" data-bs-toggle="dropdown">
              <i class="bi bi-three-dots"></i>
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">編輯</a></li>
              <li><a class="dropdown-item text-danger" href="#">刪除</a></li>
            </ul>
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <!-- 分頁 -->
  <nav class="mt-2" aria-label="Page navigation example">
    <ul class="pagination justify-content-center pagination-white">
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>
</div>